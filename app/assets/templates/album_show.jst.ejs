



<h1 class="album-show-title"> <%= album.escape("title") %> </h1>

<% album.screenshots().each(function (screenshot) { %>
  <section class="album-ss-container">
  <span class="album-ss-title"> <%= screenshot.escape("title") %> </span>


  <a class="album-ss" data-id="<%=screenshot.get('id')%>" href="#/screenshots/<%=screenshot.get('id')%>"><img class="album-ss" src="<%= screenshot.get("thumb_url") %>" alt="" />
    <img class="album-ss-popout" src="<%= screenshot.get("medium_url") %>" alt="" /></a>
  <br>
  <% if (Instagib.current_user_id === album.get("owner_id")) {%>
  <button class="remove-ss" data-id="<%= screenshot.get("id") %>">Remove Screenshot from Album</button>
  <% } %>

  <br>
</section>
<% }.bind(album)) %>
<br>
<br>
<% if (Instagib.current_user_id === album.get("owner_id") && album.other_ss()) {%>
<button class="add-ss">Add your screenshots to this album</button>
<% } %>
